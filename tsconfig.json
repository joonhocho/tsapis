{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es5", "es6", "es2015", "es7", "es2016", "es2017"],
    "listEmittedFiles": true,
    "listFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "_src/*": ["src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["node_modules/@types", "src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
