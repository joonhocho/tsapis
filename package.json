{
  "name": "tsapis",
  "version": "0.0.1",
  "description": "Various cloud services API response types documented and written in TypeScript",
  "main": "es5/index.js",
  "types": "es5/index.d.ts",
  "scripts": {
    "all": "yarn clean && yarn format && yarn lint:fix && yarn test && yarn build && yarn build:es5",
    "build": "tsc -p ./tsconfig.json && tscpaths -p ./tsconfig.json -s ./src -o ./lib",
    "build:es5": "tsc -p ./tsconfig.es5.json && tscpaths -p ./tsconfig.es5.json -s ./src -o ./es5",
    "clean": "rm -rf ./lib ./es5 ./coverage",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tslint -c ./tslint.json \"src/**/*\"",
    "lint:fix": "tslint --fix -c ./tslint.json \"src/**/*\"",
    "precommit": "yarn all",
    "reinstall": "rm -rf ./node_modules yarn.lock && yarn",
    "start": "yarn test",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "pre-commit": "precommit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/tsapis.git"
  },
  "keywords": [
    "cloud services",
    "API",
    "documentation",
    "type definitions",
    "TypeScript"
  ],
  "author": "Joon Ho Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joonhocho/tsapis/issues"
  },
  "homepage": "https://github.com/joonhocho/tsapis#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "coveralls": "^3.0.3",
    "jest": "^24.8.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tscpaths": "^0.0.9",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  }
}
